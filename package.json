{
  "name": "orchard",
  "version": "0.2.0",
  "description": "Web Components utility functions",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "snowpack dev",
    "build": "snowpack build",
    "bump:patch": "verup 1 && ./scripts/bump.sh",
    "bump:minor": "verup 0.1.0 && ./scripts/bump.sh",
    "bump:major": "verup 1.0.0 && ./scripts/bump.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@snowpack/plugin-sass": "1.4.0",
    "@snowpack/plugin-typescript": "1.2.1",
    "mammoth": "1.4.18",
    "snowpack": "3.8.8",
    "ts-lint": "4.5.1",
    "typescript": "4.4.4"
  },
  "devDependencies": {
    "eslint": "8.0.1"
  },
  "extra": {
    "verup": {
      "files": [
        "package-lock.json",
        "package.json"
      ],
      "regs": [
        "((?:\\$|(?:\\s*\\**\\s*@)|(?:\\s*(?:var|,)?\\s+))version[\\s\\:='\"]+)([0-9]+(?:\\.[0-9]+){2,2})",
        "^(\\s*(?:export\\s+)const\\s+version[\\s='\"]+)([0-9]+(?:\\.[0-9]+){2,2})",
        "^(\\s?\\*.*v)([0-9]+(?:\\.[0-9]+){2,2})",
        "(.*version=\")([0-9]+(?:\\.[0-9]+){2,2})",
        "(.*?v=)([0-9]+(?:\\.[0-9]+){2,2})"
      ]
    }
  }
}
